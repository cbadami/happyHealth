<style>
    body {
        background-color: dimgray;
        width: 100%;
        height: 100%;
        background-size: 200%;
    }

    .sidenav {
  height: 100%;
  width: 0;
  position: fixed;
  z-index: 1;
  top: 0;
  left: 0;
  background-color: darkgreen;
  overflow-x: hidden;
  transition: 0.5s;
  padding-top: 60px;
}

.sidenav a {
  padding: 8px 8px 8px 32px;
  text-decoration: none;
  font-size: 25px;
  color: #f1f1f1;
  display: block;
  transition: 0.3s;
}


.sidenav .closebtn {
  position: absolute;
  top: 0;
  right: 25px;
  font-size: 36px;
  margin-left: 50px;
}
    h1 {
        color: white;
        text-align: center;
        margin-bottom: 10px;
        font-weight: bold;
    }

    h2 {
        color: black;
        text-align: center;
        margin-bottom: 10px;
    }

    .app-container-wrapper {
        max-width: 400px;
        width: 100%;
        top: 2vh;
        background: #fff;
        padding: 15px;
        border-radius: 10px;
        box-shadow: 12px 12px 22px;
    }

    .app-container-wrapper .row {
        background: inher;
        border-radius: none;
        box-shadow: none;
    }

    .row {
        background: white;
        border-radius: 30px;
        box-shadow: 12px 12px 22px;
    }

    h4 {
        text-align: center;
    }

    img {
        border-bottom-left-radius: 30px;
        border-top-left-radius: 30px;
        border-bottom-right-radius: 30px;
        border-top-right-radius: 30px;
        width: 150px;
        height: 150px;
        padding: 10px;
    }

    .btn1 {
        border: none;
        outline: none;
        height: 50px;
        width: 100%;
        background-color: rgb(20, 102, 24);
        color: white;
        border-radius: 10px;
        font-weight: bold;
        border: none;
        outline: none;
        transition-duration: 1s;
        margin-bottom: 5px;
        margin-top: 5px;

    }

    .btn1:hover {
        background-color: white;
        border-color: green;
        border: 1px solid;
        color: black;
    }

    .container {
        display: flex;
        justify-content: center;
        align-items: center;
    }

    .nav-bar {
        display: flex;
    }

    .nav-bar h1 {
        text-align: center;
    }

    .nav-icons {
        flex: 1;
        height: 20%;
        width: 30px;
    }

    .nav-icons .fa {

        display: inline;
        font-size: 30px;
        padding: 3px;
    }

    .nav-icons ul {
        margin-left: 150px;
        display: inline;
    }

    .nav-icons ul li {
        list-style: none;
        display: inline-block;
        padding: 8px 25px;
    }

    .column {
        float: left;
        width: 50%;
        padding-inline-start: 5px;
        padding: 5px;
    }

    @media screen and (max-width: 500px) {
        .column {
            width: 100%;
        }

        .nav-bar {
            float: none;
            display: block;
        }

        .h5 {
            text-align: center;
            text-decoration: none;
            float: inline-end;
        }
    }

    /* .row::after {
  content: "";
  clear: both;
  display: table;
} */
</style>

<body>
    <section class="Form my-4 mx-2">
        <h1>Happy Health</h1>
        <div class="container app-container-wrapper">
            <div class="row no-gutter">
                <div class="col-lg-12" px-5="" pt-5="">

                    <div id="mySidenav" class="sidenav">
                        <a href="javascript:void(0)" class="closebtn" onclick="closeNav()">&times;</a>
                        <a href="/adminLogin">Login</a>
                        <a href="">Home</a>
                        <a href="#">Logs</a>
                          <a href="#">Users</a>
                        <a href="#">Notifications</a>
                        <a href="#">Logout</a>
                      </div>
                      <span style="font-size:30px;cursor:pointer" onclick="openNav()">&#9776; </span>
                      <script>
                      function openNav() {
                        document.getElementById("mySidenav").style.width = "250px";
                      }
                      
                      function closeNav() {
                        document.getElementById("mySidenav").style.width = "0";
                      }
                      </script>
