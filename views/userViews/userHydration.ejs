<div class="app-main__inner">
    <section>
        <div class="container app-container-wrapper">
            <div class="row justify-content-center">
                <div class="col-lg-4">
                    <form method="POST" class="my-5">
                        <div class="form-group">
                            <%- include ('../partials/messages') %>
                            <h2 class="d-flex justify-content-center py-3">User Water Intake</h2>

                        </div>
                        <div class="form-row">
                            <label for="username">Number of Glasses</label>
                            <input type="number" id="water" name="water" class="form-control" placeholder="0"
                                value="<%= typeof water != 'undefined' ? water : '' %>" />
                        </div>
                        <div class="form-row">
                            <label for="password">Goal</label>
                            <input type="number" id="goal" name="goal" class="form-control" placeholder="0"
                                value="<%= typeof goal != 'undefined' ? goal : '' %>" />
                        </div>
                        <div class="form-row"></div>

                        <div class="form-row">
                            <div class="col-lg-12">
                                <button type="submit" class="btn btn-primary" style="margin-top: 10px;">
                                    Update
                                </button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </section>
</div>   