<div class="app-main__inner">
  <section>
    <div class="container app-container-wrapper">
      <div class="row justify-content-center">
        <div class="col-lg-4">
          <form method="POST" class="my-5">
            <div class="form-group">
              <%- include ('../partials/messages') %>
              <h2 class="d-flex justify-content-center py-3">
                User Water Intake
              </h2>
            </div>
            <div class="form-row">
              <label for="dateText">Current Date:</label>
              <p id="demo"></p>
              <!-- <input  id="demo" class="form-control" /> -->
            </div>

            <script>
              var d = new Date();
              document.getElementById("demo").innerHTML = d;
            </script>
          
            <div class="form-row">
              <label for="username">Number of Glasses</label>
              <input id="water" class="form-control" type="number" placeholder="0" oninput="weightConverter(this.id,this.value)" onchange="weightConverter(this.id,this.value)">
            </div>
            <div class="form-row">
              <label>Ounces</label>
              <input id="inputOunce" class="form-control" type="number" placeholder="0" oninput="weightConverter(this.id,this.value)" onchange="weightConverter(this.id,this.value)">
            </div>
            <script>
              function weightConverter(source,valNum) {
              valNum = parseFloat(valNum);
              
               
              var inputGrams = document.getElementById("water");
              var inputStones = document.getElementById("inputOunce");
              if (source=="water") {
               
                inputStones.value=(valNum*8).toFixed(2);
              }
              if (source=="inputOunce") {
              
                inputGrams.value=(valNum*0.125).toFixed(2);
              }
              }
                        </script>
            <div class="form-row">
              <label for="password">Goal</label>
              <input
                type="number"
                id="goal"
                name="goal"
                class="form-control"
                placeholder="0"
                value="<%= typeof goal != 'undefined' ? goal : '' %>"
              />
            </div>
            <div class="form-row"></div>

            <div class="form-row">
              <div class="col-lg-12">
                <button
                  type="submit"
                  class="btn btn-primary"
                  style="margin-top: 10px"
                >
                  Update
                </button>
              </div>
            </div>
          </form>
        </div>
      </div>
    </div>
  </section>
</div>
