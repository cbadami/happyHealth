<div class="app-main__inner">
  <section>
    <div class="container app-container-wrapper">
      <div class="row justify-content-center">
        <div class="col-lg-4">
          <div class="form-group">
            <%- include ('../partials/messages') %>
            <h2 class="d-flex justify-content-center py-3">
              Fruits & Veggies Consumed
            </h2>
          </div>
          <div class="form-row">
            <label for="dateText"> &nbsp; </label>
            <p id="demo"></p>
            <!-- <input  id="demo" class="form-control" /> -->
          </div>
          <script>
            let d = new Date();
            const months = [
              "January",
              "February",
              "March",
              "April",
              "May",
              "June",
              "July",
              "August",
              "September",
              "October",
              "November",
              "December",
            ];
            const dayNames = [
              "Sunday",
              "Monday",
              "Tuesday",
              "Wednesday",
              "Thursday",
              "Friday",
              "Saturday",
            ];
            let formatted_date =
              dayNames[d.getDay()] +
              ", " +
              months[d.getMonth()] +
              " " +
              d.getDate() +
              ", " +
              d.getFullYear();
            document.getElementById("demo").innerHTML = formatted_date;
          </script>

          <form method="POST" class="my-5" action="postFruitsVeggies">
            <div class="form-row">
              <label for="username">Number of Fruits Eaten</label>
              <input
                type="number"
                id="fruits"
                name="fruits"
                min="0"
                class="form-control"
                placeholder="0"
                value="<%= typeof fruits != 'undefined' ? fruits : '' %>"
              />
            </div>
            <div class="form-row">
              <label for="password">Personal Daily Goal</label>
              <input
                type="number"
                id="fruitgoal"
                name="fruitgoal"
                min="0"
                class="form-control"
                placeholder="0"
                value="<%= typeof fruitGoal != 'undefined' ? fruitGoal : '' %>"
              />
            </div>

            <div class="form-row">
              <label for="username">Number of Vegetables Eaten</label>
              <input
                type="number"
                id="veggies"
                name="veggies"
                min="0"
                class="form-control"
                placeholder="0"
                value="<%= typeof veggies != 'undefined' ? veggies : '' %>"
              />
            </div>
            <div class="form-row">
              <label for="password">Personal Daily Goal</label>
              <input
                type="number"
                id="veggieGoal"
                name="veggieGoal"
                min="0"
                class="form-control"
                placeholder="0"
                value="<%= typeof veggieGoal != 'undefined' ? veggieGoal : '' %>"
              />
            </div>

            <div class="form-row"></div>

            <div class="form-row">
              <div class="col-lg-12">
                <button
                  type="submit"
                  class="btn btn-primary"
                  style="margin-top: 10px"
                  onclick="myFunction()"
                >
                  Update
                </button>
              </div>
            </div>
          </form>
        </div>
      </div>
    </div>
  </section>
</div>
<script>
  function myFunction() {
    alert("Updated Fruits and Vegetables Successfully");
  }
</script>
