<div class="app-main__inner">
    <section>
        <div class="container app-container-wrapper">
            <div class="row justify-content-center">
                <div class="col-lg-4">

                    <form action="/userSignup" method="POST">

                        <div class="form-group">
                            <h2>Create an account</h2>
                            <%- include ('../partials/messages') %>
                        </div>
                        <div class="form-group">
                            <label for="name">Username</label>
                            <input type="text" id="name" name="username" class="form-control" placeholder="Username"
                                aria-describedby="emailHelp" value="<%= typeof username != 'undefined' ? username : '' %>" />
                        </div>
                        <div class="form-group">
                            <label for="email">Email</label>
                            <input type="email" id="email" name="email" class="form-control" placeholder="Email id"
                                aria-describedby="emailHelp" value="<%= typeof email != 'undefined' ? email : '' %>" />
                        </div>
                        <div class="form-group">
                            <label for="password">Password</label>
                            <input type="password" id="password" name="password" class="form-control"
                                placeholder="***************"
                                value="<%= typeof password != 'undefined' ? password : '' %>" />
                        </div>
                        <div class="form-group">
                            <label for="password2">Confirm Password</label>
                            <input type="password" id="password2" name="password2" class="form-control"
                                placeholder="***************"
                                value="<%= typeof password2 != 'undefined' ? password2 : '' %>" />
                        </div>
                        <div class="form-group">
                            <p>You already have an account? <a href="/">Sign In! </a> </p>

                        </div>
                        <div>
                            <button type="submit" class="btn btn-primary btn-block">Register</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </section>
</div>