<style>
    body {
        background-color: dimgray;
        width: 100%;
        height: 100%;
        background-size: 200%;
    }

    .sidenav {
        height: 100%;
        width: 0;
        position: fixed;
        z-index: 1;
        top: 0;
        left: 0;
        background-color: darkgreen;
        overflow-x: hidden;
        transition: 0.5s;
        padding-top: 60px;
    }

    .sidenav a {
        padding: 8px 8px 8px 32px;
        text-decoration: none;
        font-size: 25px;
        color: #f1f1f1;
        display: block;
        transition: 0.3s;
    }


    .sidenav .closebtn {
        position: absolute;
        top: 0;
        right: 25px;
        font-size: 36px;
        margin-left: 50px;
    }

    i {
        float: right;
    }

    h1 {
        color: white;
        text-align: center;
        margin-bottom: 10px;

    }

    h2 {
        font-weight: 700 !important;
        text-align: center;
        margin: 0px;
        padding-bottom: 1rem;
    }

    .app-container-wrapper {
        max-width: 400px;
        width: 100%;
        top: 2vh;
        background: #fff;
        padding: 15px;
        border-radius: 10px;
        box-shadow: 12px 12px 22px;
    }

    .app-container-wrapper .row {
        background: inher;
        border-radius: none;
        box-shadow: none;
    }

    .row {
        background: white;
        border-radius: 30px;
        box-shadow: 12px 12px 22px;
    }

    img {
        border-bottom-left-radius: 30px;
        border-top-left-radius: 30px;
        /* float: right; */
    }


    .btn1 {
        border: none;
        outline: none;
        height: 50px;
        width: 100%;
        background-color: rgb(20, 102, 24);
        color: white;
        border-radius: 10px;
        font-weight: bold;
        margin-bottom: 10px;
        margin-top: 20px;

        border: none;
        outline: none;
        transition-duration: 1s;
    }

    .btn1:hover {
        background-color: white;
        border-color: green;
        border: 1px solid;
        color: black;
    }

    #stepicon {
        margin-left: auto;
        margin-right: auto;
    }

    #dateText {
        display: block;
        width: 100%;
        height: 34px;
        padding: 6px 12px;
        font-size: 14px;
        line-height: 1.42857143;
        color: #555;
        background-color: #fff;
        background-image: none;
        border: 1px solid #ccc;
        border-radius: 4px;
    }
</style>

<body>
    <section class="Form my-4 mx-2">
        <h1 class="font-weight-bold">Happy Health</h1>
        <div class="container app-container-wrapper">
            <div class="row no-gutter">
                <div class="col-lg-12" px-5="" pt-5="">
                    <span style="font-size:30px;cursor:pointer" onclick="openNav()">&#9776; </span>
                    <script>
                        function openNav() {
                            document.getElementById("mySidenav").style.width = "250px";
                        }

                        function closeNav() {
                            document.getElementById("mySidenav").style.width = "0";
                        }
                    </script>
                    <form action="/userStep" method="POST" class="form-container">

                        <div class="form-group">
                            <h2>Step Count</h2>
                            <img src="assets/images/happyHealth/step.png"
                                style='width:20%;margin-left: auto; margin-right: auto;  display: block;'>
                        </div>
                        <p style='color: red;'> <%= errors %></p>
                        <br>
                        <div class="form-row">

                            <label for="username">Date:</label>
                            <!-- Reference: https://eonasdan.github.io/bootstrap-datetimepicker/ -->
                            <div class='input-group date' id='datetimepicker1'>
                                <input type='text' name="date" id="dateText"
                                    value="<%= typeof date != 'undefined' ? date : '' %>" />
                                <span class="input-group-addon">
                                    <span class="glyphicon glyphicon-calendar"></span>
                                </span>
                            </div>
                        </div>
                        <div class="form-row">
                            <label for="username">Number of Steps</label>
                            <input type="number" id="num_steps" name="num_steps" class="form-control" placeholder="0"
                                value="<%= typeof num_steps != 'undefined' ? num_steps : '' %>" />
                        </div>
                        <div class="form-row">
                            <label for="password">Goal</label>
                            <input type="number" id="goal" name="goal" class="form-control" placeholder="0"
                                value="<%= typeof goal != 'undefined' ? goal : '' %>" />
                        </div>
                        <!-- <div class="form-row">
                           <label for="password">Target</label>
                            <input type="number" id="target" name="target" class="form-control" placeholder="0"
                                value="" />
                        </div> -->
                        <div class="form-row"></div>

                        <div class="form-row">
                            <div class="col-lg-12">
                                <button type="submit" class="btn1">
                                    Update
                                </button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </section>
    <!-- JS files: jQuery first, then Popper.js, then Bootstrap JS -->
    <script type="text/javascript">
        $(function () {
            $('#datetimepicker1').datetimepicker({
                format: 'MM/DD/YYYY'
            });
        });
    </script>
