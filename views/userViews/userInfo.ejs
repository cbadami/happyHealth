<style>
    #imageUpload {
        display: none;
    }

    #profileImage {
        cursor: pointer;
    }

    #profile-container {
        width: 150px;
        height: 150px;
        overflow: hidden;
        -webkit-border-radius: 50%;
        -moz-border-radius: 50%;
        -ms-border-radius: 50%;
        -o-border-radius: 50%;
        border-radius: 50%;
    }

    #profile-container img {
        width: 150px;
        height: 150px;
    }
</style>

<br>
<div class="app-main__inner">
    <div class="container">
        <div class="main-body">
            <div class="row gutters-sm">
                <div class="col-md-4 mb-3">
                    <div class="card" style="height: auto;">
                        <div class="card-body">
                            <div class="d-flex flex-column align-items-center text-center">
                                <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js"></script>
                                <div id="profile-container">
                                    <image id="profileImage"
                                        src="https://cdn1.iconfinder.com/data/icons/technology-devices-2/100/Profile-512.png" />
                                </div>

                                <div class="mt-3">
                                    <h4 class="text-capitalize">
                                        <%= result[0].fullName %>
                                    </h4>
                                    <p class="text-secondary mb-1">@<%= result[0].userName %>
                                    </p>
                                </div>
                            </div>
                            <div class="col-md-12">
                                <form method="get" action="/userProfile">
                                    <button class="btn btn-primary btn-lg btn-md btn-sm"><i class="fa fa-edit"></i> Edit
                                        Info</button>
                                </form>
                            </div>
                        </div>


                    </div>

                    <div class="card text-center">


                        <div class="card-body ml-4">

                            <div class="card-title">
                                <!-- <span class="mb-0">Daily Goals</span> -->
                                <h5 style="color: black;" class="text-capitalize">Daily Goals</h5>
                            </div>


                            <div class="row">
                                <div class="col-sm-6 font-weight-bold">
                                    <span class="mb-0">Step:</span>
                                </div>
                                <div class="col-sm-3 text-secondary">
                                    <%= goal.stepGoal %>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-sm-6 font-weight-bold">
                                    <span class="mb-0">Sleep:</span>
                                </div>
                                <div class="col-sm-3 text-secondary">
                                    <%= goal.sleepGoal %>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-sm-6 font-weight-bold">
                                    <span class="mb-0">MindfulMinutes:</span>
                                </div>
                                <div class="col-sm-3 text-secondary">
                                    <%= goal.meTimeGoal %>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-sm-6 font-weight-bold">
                                    <span class="mb-0">Water:</span>
                                </div>
                                <div class="col-sm-3 text-secondary">
                                    <%= goal.waterGoal %>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-sm-6 font-weight-bold">
                                    <span class="mb-0">Fruits:</span>
                                </div>
                                <div class="col-sm-3 text-secondary">
                                    <%= goal.fruitGoal %>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-sm-6 font-weight-bold">
                                    <span class="mb-0">Veggies:</span>
                                </div>
                                <div class="col-sm-3 text-secondary">
                                    <%= goal.veggieGoal %>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-sm-6 font-weight-bold">
                                    <span class="mb-0">Physical Activity:</span>
                                </div>
                                <div class="col-sm-3 text-secondary">
                                    <%= goal.physicalActivityGoal %>
                                </div>
                            </div>
                        </div>
                    </div>

                </div>
                <div class="col-md-8">
                    <div class="card mb-3" style="height:auto;">
                        <div class="card-body">
                            <div class="row">
                                <div class="col-sm-3">
                                    <h6 class="mb-0">First Name:</h6>
                                </div>
                                <div class="col-sm-9 text-secondary text-capitalize">
                                    <%= result[0].fullName.split(' ')[0] %>
                                </div>
                            </div>
                            <hr>
                            <div class=" row">
                                <div class="col-sm-3">
                                    <h6 class="mb-0">Last Name:</h6>
                                </div>
                                <div class="col-sm-9 text-secondary text-capitalize">
                                    <%= result[0].fullName.split(' ')[1] %>
                                </div>
                            </div>
                            <hr>
                            <div class=" row">
                                <div class="col-sm-3">
                                    <h6 class="mb-0">Email:</h6>
                                </div>
                                <div class="col-sm-9 text-secondary">
                                    <%= result[0].email%>
                                </div>
                            </div>
                            <hr>
                            <div class="row">
                                <div class="col-sm-3">
                                    <h6 class="mb-0">Gender:</h6>
                                </div>
                                <div class="col-sm-9 text-secondary">
                                    <%= result[0].gender%>
                                </div>
                            </div>
                            <hr>
                            <div class="row">
                                <div class="col-sm-3">
                                    <h6 class="mb-0">Date of Birth:</h6>
                                </div>
                                <div class="col-sm-9 text-secondary">
                                    <%= result[0].dateOfBirth%>
                                </div>
                            </div>
                            <hr>
                            <div class="row">
                                <div class="col-sm-3">
                                    <h6 class="mb-0">Age:</h6>
                                </div>
                                <div class="col-sm-9 text-secondary">
                                    <%= result[0].age%>
                                </div>
                            </div>
                            <hr>
                            <div class="row">
                                <div class="col-sm-3">
                                    <h6 class="mb-0">Current Weight(lbs):</h6>
                                </div>
                                <div class="col-sm-9 text-secondary">
                                    <%= result[0].currentWeight%>
                                </div>
                            </div>
                            <hr>
                            <div class="row">
                                <div class="col-sm-3">
                                    <h6 class="mb-0">Desired Weight(lbs):</h6>
                                </div>
                                <div class="col-sm-9 text-secondary">
                                    <%= result[0].desiredWeight%>
                                </div>
                            </div>
                            <hr>
                            <div class="row">
                                <div class="col-sm-3">
                                    <h6 class="mb-0">Height(inch):</h6>
                                </div>
                                <div class="col-sm-9 text-secondary">
                                    <%= result[0].height%>
                                </div>
                            </div>
                            <hr>
                            <div class="row">
                                <div class="col-sm-3">
                                    <h6 class="mb-0">Country:</h6>
                                </div>
                                <div class="col-sm-9 text-secondary">
                                    <%= result[0].country%>
                                </div>
                            </div>
                            <hr>
                            <div class="row">
                                <div class="col-sm-3">
                                    <h6 class="mb-0">State:</h6>
                                </div>
                                <div class="col-sm-9 text-secondary">
                                    <%= result[0].state%>
                                </div>
                            </div>

                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
    <style>
        h6 {
            font-weight: 500;
        }
    </style>