<div class="app-main__inner">
  <section>
    <div class="container app-container-wrapper">
      <div class="row justify-content-center">
        <div class="col-lg-4">
          <form method="POST" class="my-5">
            <div class="form-group">
              <%- include ('../partials/messages') %>
              <h2 class="d-flex justify-content-center py-3">Step Count</h2>
            </div>
            <!--  <div class="form-row">
                            <label for="username">Date:</label>
                             Reference: https://eonasdan.github.io/bootstrap-datetimepicker/ 
                            <div class='input-group date' id='datetimepicker1'>
                                <input type='text' name="date" id="dateText"
                                    value="<%= typeof date != 'undefined' ? date : '' %>" />
                                <span class="input-group-addon">
                                    <span class="glyphicon glyphicon-calendar"></span>
                                </span>
                            </div>
                        </div> -->
            <div class="form-row">
              <label for="dateText">Current Date:</label>
              <p id="demo"></p>
              <!-- <input  id="demo" class="form-control" /> -->
            </div>

            <script>
              var d = new Date();
              document.getElementById("demo").innerHTML = d;
            </script>
            <div class="form-row">
              <label for="username">Number of Steps:</label>
              <input
                type="number"
                id="stepCount"
                name="stepCount"
                class="form-control"
                value="<%= typeof stepCount != 'undefined' ? stepCount : '' %>"
              />
            </div>
            <div class="form-row">
              <label for="username">Total Walking Distance:</label>
              <input
                type="number"
                id="stepDistance"
                name="stepDistance"
                placeholder="In meters"
                class="form-control"
                value="<%= typeof stepDistance != 'undefined' ? stepDistance : '' %>"
              />
            </div>
            <div class="form-row">
              <label for="password">Goal:</label>
              <input
                type="number"
                id="stepGoal"
                name="stepGoal"
                class="form-control"
                placeholder="0"
                value="<%= typeof stepGoal != 'undefined' ? stepGoal : '' %>"
              />
            </div>
            <div class="form-row">
              <div class="col-lg-12">
                <button
                  type="submit"
                  class="btn btn-primary"
                  style="margin-top: 10px"
                >
                  Update
                </button>
              </div>
            </div>
          </form>
        </div>
      </div>
    </div>
  </section>
</div>
