<div class="app-main__inner">
  <section>
    <div class="container app-container-wrapper">
      <div class="row justify-content-center">
        <div class="col-lg-4">
          <form method="POST" class="my-5">
            <div class="form-group">
              <%- include ('../partials/messages') %>
              <h3 class="d-flex justify-content-center py-3">
                Physical Activity
              </h3>
            </div>
            <div class="form-row">
              <label for="dateText"> &nbsp; </label>
              <p id="demo"></p>
              <!-- <input  id="demo" class="form-control" /> -->
            </div>
            <script>
              let d = new Date();
              const months = [
                "January",
                "February",
                "March",
                "April",
                "May",
                "June",
                "July",
                "August",
                "September",
                "October",
                "November",
                "December",
              ];
              const dayNames = [
                "Sunday",
                "Monday",
                "Tuesday",
                "Wednesday",
                "Thursday",
                "Friday",
                "Saturday",
              ];
              let formatted_date =
                dayNames[d.getDay()] +
                ", " +
                months[d.getMonth()] +
                " " +
                d.getDate() +
                ", " +
                d.getFullYear();
              document.getElementById("demo").innerHTML = formatted_date;
            </script>
            <div class="form-group">
              <label>Choose Level</label>
              <%- include ('../partials/messages') %>
              <select id="level" class="form-control" name="level">
                <option value="Light">Light</option>
                <option value="Moderate">Moderate</option>
                <option value="Intense">Intense</option>
              </select>
            </div>
            <div class="form-row">
              <label for="username">Physical Activity(In Minutes)</label>
              <input
                type="number"
                id="physicalActivityMinutes"
                name="physicalActivityMinutes"
                min="0"
                step="any"
                class="form-control"
                placeholder="0"
                value="<%= typeof physicalActivityMinutes != 'undefined' ? physicalActivityMinutes : '' %>"
              />
            </div>
            <div class="form-row">
              <label for="password">Personal Daily Goal</label>
              <input
                type="number"
                id="physicalActivityGoal"
                name="physicalActivityGoal"
                min="0"
                step="any"
                class="form-control"
                placeholder="0"
                value="<%= typeof physicalActivityGoal != 'undefined' ? physicalActivityGoal : '' %>"
              />
            </div>
            <br />
            <div class="form-group">
              <label for="comments">Comments</label>
              <input
                type="text"
                value="<%= typeof comments != 'undefined' ? comments : '' %>"
                class="form-control"
                id="comments"
                aria-describedby="userNameHelp"
                placeholder="Enter your comments"
                name="comments"
              />
            </div>
            <div class="form-row"></div>

            <div class="form-row">
              <div class="col-lg-12">
                <button
                  type="submit"
                  class="btn btn-primary"
                  style="margin-top: 10px"
                  onclick="myFunction()"
                >
                  Update
                </button>
              </div>
            </div>
          </form>
        </div>
      </div>
    </div>
  </section>
</div>
<script>
  function myFunction() {
    alert("Updated Physical Activity Successfully");
  }
</script>
