            <div class="form-row">
              <label for="username">Number of Hours slept</label>
              <input
                type="number"
                id="sleepHours"
                name="sleepHours"
                class="form-control"
                placeholder="0"
                value="<%= typeof sleepHours != 'undefined' ? sleepHours : '' %>"
              />
            </div>
            <div class="form-row">
              <label for="password">Goal</label>
              <input
                type="number"
                id="sleepGoal"
                name="sleepGoal"
                class="form-control"
                placeholder="0"
                value="<%= typeof sleepGoal != 'undefined' ? sleepGoal : '' %>"
              />
            </div>

            <div class="form-row">
              <div class="col-lg-12">
                <button
                  type="submit"
                  class="btn btn-primary"
                  style="margin-top: 10px"
                >
                  Update
                </button>
              </div>
            </div>
          </form>
        </div>
      </div>
    </div>
