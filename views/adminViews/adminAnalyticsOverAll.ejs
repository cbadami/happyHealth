<script>

    let currentDate = "<%= currentDate %>"

    console.log(currentDate, "-------before current date")
    let [m, d, y] = currentDate.split('/');

    let formatDate = y + '-' + m + '-' + d;
    console.log(formatDate, "-------current date")

    let today = new Date();
    let dd = today.getDate();
    let mm = today.getMonth() + 1; //January is 0!
    let yyyy = today.getFullYear();
    if (dd < 10) {
        dd = '0' + dd
    }
    if (mm < 10) {
        mm = '0' + mm
    }

    today = yyyy + '-' + mm + '-' + dd;
    document.getElementById("datepicker").setAttribute("max", today);
    document.getElementById("datepicker").value = formatDate;


    function getRoute() {
        let datepicker = document.getElementById("datepicker")
        location.href = `/adminAnalytics?datepicker=${datepicker.value}`;
    }

    function downloadRoute() {
        let datepicker = document.getElementById("datepicker")
        location.href = `/download?datepicker=${datepicker.value}`;
    }


