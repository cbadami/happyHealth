<div class="app-main__inner">
    <% if (!joinedUsers[0]) { %>

        <div class="col-sm-12 row">
            <div class="col-sm-12">
                <h3>Group Name</h3>
                <div class="form-group col-sm-3">
                    <select id="inputState" class="form-control">
                        <!-- <option selected></option> -->
                        <% for (var i=0; i < notJoinedUsers.length;i++) { %>
                            <option>
                                <%= notJoinedUsers[i].username %>
                            </option>
                            <% } %>
                    </select>

                    <input type="submit" name="Add User"></input>

                </div>

            </div>
        </div>

        <% } else{ %>
            <div class="table-wrapper">
                <div class="col-sm-12 row">
                    <div class="col-sm-12">
                        <h3>Group Name: <%= groupDetails[0].groupName %></h3>
                        <form action="<%= groupDetails[0].groupId%>/addUserAdmin" method="POST">
                            <div>
                                <label for="addUser"><strong>Select User: </strong> </label>
                                <select name="userId" class="form-control addUser">
                                    <% for (var i=0; i < notJoinedUsers.length;i++) { %>
                                        <option value="<%= notJoinedUsers[i].userId %>">
                                            <%= notJoinedUsers[i].userName %>
                                        </option>
                                        <% } %>
                                </select>
                                <button type="submit" class="btn btn-primary">Add User</button>
                            </div>

                        </form>
                    </div>
                </div>

                <table class="table table-striped table-hover">
                    <thead>
                        <tr>
                            <th>Sl.No</th>
                            <th>Username</th>
                            <!-- <th>Joined Date</th> -->
                            <th>Remove user</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% for (var i=0; i < joinedUsers.length;i++) { %>
                            <tr>
                                <th scope="row">
                                    <%= i+1 %>
                                </th>
                                <td>
                                    <%= joinedUsers[i].userName%>
                                </td>
                                <!-- <td>
                                    <%= joinedUsers[i].joinedDate%>
                                </td> -->
                                <td>
                                    <form action="<%= groupDetails[0].groupId%>/removeUserAdmin/<%= joinedUsers[i].userId%>" method="POST">
                                        <button type="submit" id="PopoverCustomT-1" class="btn btn-primary btn-danger">
                                            Remove</button>
                                    </form>
                                </td>
                            </tr>
                            <% } %>
                    </tbody>
                </table>
            </div>
            <% } %>
</div>
<style>
    .addUser{
        width: 250px;
        display: inline-flex;
    }
    .btn{
        display: inline-flex;
    }
</style>

