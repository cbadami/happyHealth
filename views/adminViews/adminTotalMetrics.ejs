<div class="app-main__inner">
    <div class="table-title">
        <div class="row">
            <div class="col-sm-8">
                <h2 id="info">User Metrics for <%= new Intl.DateTimeFormat('en-GB', { year: 'numeric', month: 'long', day: '2-digit'}).format(new Date())   %></h2>
   
            </div>
        </div>
    </div>
    <div class="container">
        <div class="main-body">
            <div class="row gutters-sm">
                <div class="col-md-4 mb-3">
                    <div class="card" style="height: auto;">
                        <div class="card-body">
                            <div class="d-flex flex-column align-items-center text-center">
                                <img src="/static/assets/images/happyHealth/userIcon3.png" alt="image not found"
                                    width="170">
                                <div class="mt-3">
                                    <h4>
                                        <%= result[0][0].fullName %>
                                    </h4>
                                </div>
                            </div>
                        </div>
                    </div>
                    </br>
                    <div class="form-group">
                        <form action="/adminMetricsDate/<%= result[0][0].userId%>" method="GET">
                            <label for="start" class="font-weight-bold">From date :</label>
                            <input type="date" id="datepicker1" class="mb-2 date" name="datepicker1" placeholder="mm/dd/yyyy" required>
                            </br>
                            <label for="start" class="font-weight-bold">To date :</label>
                            <input type="date" id="datepicker2" class="date" name="datepicker2" placeholder="mm/dd/yyyy" required>
                            <button type="submit" id="PopoverCustomT-1" class="btn btn-primary btn-sm"
                                    onclick="getData()">Get</button> 
                        </form>
                    </div>
                </div>
                <div class="col-md-8">
                    <div class="card mb-3" style="height:auto;">
                        <div class="card-body">


                            <div class="row">
                                <div class="col-sm-3">
                                    <h6 class="mb-0">First Name:</h6>
                                </div>
                                <div class="col-sm-3 text-secondary">
                                    <%= result[0][0].fullName.split(' ')[0] %>
                                </div>
                                <div class="col-sm-3">
                                    <h6 class="mb-0">Last Name:</h6>
                                </div>
                                <div class="col-sm-3 text-secondary">
                                    <%= result[0][0].fullName.split(' ')[1] %>
                                </div>
                            </div>
                            <hr>
                            <div class=" row">
                                <div class="col-sm-3">
                                    <h6 class="mb-0">Step Count:</h6>
                                </div>
                                <div class="col-sm-3 text-secondary">
                                    <%= result[0][0].stepCount%>
                                </div>

                                <div class="col-sm-3">
                                    <h6 class="mb-0">Total step count to-date:</h6>
                                </div>
                                <div class="col-sm-3 text-secondary">
                                    <%= result[1][0].total%>
                                </div>

                            </div>
                            <hr>
                            <div class="row">
                                <div class="col-sm-3">
                                    <h6 class="mb-0">Sleep Count:</h6>
                                </div>
                                <div class="col-sm-3 text-secondary">
                                    <%= result[0][0].sleepHours%>
                                </div>

                                <div class="col-sm-3">
                                    <h6 class="mb-0">Total Sleep count to-date:</h6>
                                </div>
                                <div class="col-sm-3 text-secondary">
                                    <%= result[1][0].totalSleep%>
                                </div>
                            </div>
                            <hr>
                            <div class="row">
                                <div class="col-sm-3">
                                    <h6 class="mb-0">Water consumed:</h6>
                                </div>
                                <div class="col-sm-3 text-secondary">
                                    <%= result[0][0].water%>
                                </div>

                                <div class="col-sm-3">
                                    <h6 class="mb-0">Total water consumed to-date:</h6>
                                </div>
                                <div class="col-sm-3 text-secondary">
                                    <%= result[1][0].totalWater%>
                                </div>
                            </div>
                            <hr>
                            <div class="row">
                                <div class="col-sm-3">
                                    <h6 class="mb-0">Mindful minutes:</h6>
                                </div>
                                <div class="col-sm-3 text-secondary">
                                    <%= result[0][0].meTime%>
                                </div>

                                <div class="col-sm-3">
                                    <h6 class="mb-0">Total Mindful minutes to-date:</h6>
                                </div>
                                <div class="col-sm-3 text-secondary">
                                    <%= result[1][0].totalMe%>
                                </div>
                            </div>
                            <hr>
                            <div class="row">
                                <div class="col-sm-3">
                                    <h6 class="mb-0">Fruits count:</h6>
                                </div>
                                <div class="col-sm-3 text-secondary">
                                    <%= result[0][0].fruits%>
                                </div>

                                <div class="col-sm-3">
                                    <h6 class="mb-0">Total Fruits count to-date:</h6>
                                </div>
                                <div class="col-sm-3 text-secondary">
                                    <%= result[1][0].totalFruits%>
                                </div>
                            </div>
                            <hr>
                            <div class="row">
                                <div class="col-sm-3">
                                    <h6 class="mb-0">Vegetables count:</h6>
                                </div>
                                <div class="col-sm-3 text-secondary">
                                    <%= result[0][0].veggies%>
                                </div>

                                <div class="col-sm-3">
                                    <h6 class="mb-0">Total vegetables count to-date:</h6>
                                </div>
                                <div class="col-sm-3 text-secondary">
                                    <%= result[1][0].totalVeggies%>
                                </div>
                            </div>
                            <hr>
                            <div class="row">
                                <div class="col-sm-3">
                                    <h6 class="mb-0">physical Activity Minutes:</h6>
                                </div>
                                <div class="col-sm-3 text-secondary">
                                    <%= result[0][0].physicalActivityMinutes%>
                                </div>

                                <div class="col-sm-3">
                                    <h6 class="mb-0">Total physical Activity Minutes to-date:</h6>
                                </div>
                                <div class="col-sm-3 text-secondary">
                                    <%= result[1][0].totalActivity%>
                                </div>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
    <style>
        h6 {
            font-weight: 500;
        }
    </style>